<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/recording_library_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res/com.intervigil.micdroid"
	android:orientation="vertical" android:gravity="center"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TextView android:id="@+id/instrumental_library_title"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:focusable="false" android:text="@string/instrumental_library_title" />

	<com.google.ads.AdView android:id="@+id/instrumental_ad"
		ads:adUnitId="a14cbf73c14c77d"
		ads:adSize="BANNER" />

	<ListView android:id="@+id/instrumental_library_list"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:choiceMode="singleChoice" />

	<TextView android:id="@+id/android:empty"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:focusable="false" android:text="@string/instrumental_library_empty" />

</LinearLayout>
